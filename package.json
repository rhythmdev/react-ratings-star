{
  "name": "react-ratings-star",
  "version": "1.0.1",
  "description": "A simple React component to display ratings with decimal values (e.g. 4.5 stars).",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "build": "rimraf dist && npm run build:esm && npm run build:cjs",
    "build:esm": "npx babel src --out-dir dist/esm",
    "build:cjs": "npx babel src --out-dir dist/cjs --presets=@babel/preset-env"
  },
  "keywords": [
    "react-rating",
    "react-ratings",
    "react-rating-stars",
    "react-star-rating",
    "component",
    "decimal",
    "half-star",
    "svg"
  ],
  "author": "Rhythm Biswas",
  "license": "MIT",
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/cli": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "rimraf": "^6.0.1"
  }
}
